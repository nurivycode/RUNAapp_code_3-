<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFrameworks>net8.0-android</TargetFrameworks>
		
		<OutputType>Exe</OutputType>
		<RootNamespace>RUNAapp</RootNamespace>
		<UseMaui>true</UseMaui>
		<SingleProject>true</SingleProject>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>

		<!-- Display name -->
		<ApplicationTitle>RUNA</ApplicationTitle>

		<!-- App Identifier -->
		<ApplicationId>com.runa.navigation</ApplicationId>

		<!-- Versions -->
		<ApplicationDisplayVersion>1.0.0</ApplicationDisplayVersion>
		<ApplicationVersion>1</ApplicationVersion>

		<!-- Android 10 (API 29) minimum -->
		<SupportedOSPlatformVersion Condition="$([MSBuild]::GetTargetPlatformIdentifier('$(TargetFramework)')) == 'android'">29</SupportedOSPlatformVersion>
	</PropertyGroup>

	<ItemGroup>
		<!-- App Icon -->
		<MauiIcon Include="Resources\AppIcon\appicon.svg" ForegroundFile="Resources\AppIcon\appiconfg.svg" Color="#051F45" />

		<!-- Splash Screen -->
		<MauiSplashScreen Include="Resources\Splash\splash.svg" Color="#051F45" BaseSize="128,128" />

		<!-- Images -->
		<MauiImage Include="Resources\Images\*" />
		
		<!-- Custom Fonts -->
		<MauiFont Include="Resources\Fonts\*" />

		<!-- Raw Assets (ONNX model, config files) -->
		<MauiAsset Include="Resources\Raw\**" LogicalName="%(RecursiveDir)%(Filename)%(Extension)" />
	</ItemGroup>

	<!-- NuGet Packages -->
	<ItemGroup>
		<!-- MAUI Core -->
		<PackageReference Include="Microsoft.Maui.Controls" Version="8.0.91" />
		<PackageReference Include="Microsoft.Maui.Controls.Compatibility" Version="8.0.91" />
		<PackageReference Include="Microsoft.Extensions.Logging.Debug" Version="8.0.1" />
		
		<!-- MVVM & Community Toolkit -->
		<PackageReference Include="CommunityToolkit.Mvvm" Version="8.3.2" />
		<PackageReference Include="CommunityToolkit.Maui" Version="9.1.1" />
		<PackageReference Include="CommunityToolkit.Maui.MediaElement" Version="4.1.1" />
		
		<!-- ONNX Runtime for Computer Vision -->
		<PackageReference Include="Microsoft.ML.OnnxRuntime" Version="1.19.2" />
		
		<!-- Camera for CV -->
		<PackageReference Include="Camera.MAUI" Version="1.5.1" />
		
		<!-- Maps -->
		<PackageReference Include="Mapsui.Maui" Version="4.1.7" />
		
		<!-- Audio Recording -->
		<PackageReference Include="Plugin.Maui.Audio" Version="3.0.0" />
		
		<!-- HTTP & JSON -->
		<PackageReference Include="System.Text.Json" Version="8.0.5" />
		
		<!-- Secure Storage is built into MAUI Essentials -->
	</ItemGroup>

	<!-- Android-specific configurations -->
	<ItemGroup Condition="$(TargetFramework.Contains('-android'))">
		<AndroidResource Include="Platforms\Android\Resources\**" />
	</ItemGroup>

</Project>
