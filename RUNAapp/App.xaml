<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:helpers="clr-namespace:RUNAapp.Helpers"
             x:Class="RUNAapp.App">
    
    <Application.Resources>
        <ResourceDictionary>
            
            <!-- Merged Resource Dictionaries -->
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            
            <!-- ═══════════════════════════════════════════════════════════════════════
                 Value Converters
                 ═══════════════════════════════════════════════════════════════════════ -->
            <helpers:StringNotEmptyConverter x:Key="StringNotEmptyConverter" />
            <helpers:IntToBoolConverter x:Key="IntToBoolConverter" />
            <helpers:ObjectToBoolConverter x:Key="ObjectToBoolConverter" />
            <helpers:ObjectToInverseBoolConverter x:Key="ObjectToInverseBoolConverter" />
            <helpers:BoolToMicIconConverter x:Key="BoolToMicIconConverter" />
            <helpers:BoolToVoiceColorConverter x:Key="BoolToVoiceColorConverter" />
            <helpers:BoolToDetectButtonTextConverter x:Key="BoolToDetectButtonTextConverter" />
            <helpers:BoolToDetectButtonColorConverter x:Key="BoolToDetectButtonColorConverter" />
            <helpers:BoolToStatusColorConverter x:Key="BoolToStatusColorConverter" />
            <helpers:BoolToStatusTextConverter x:Key="BoolToStatusTextConverter" />
            <helpers:BoolToNavButtonTextConverter x:Key="BoolToNavButtonTextConverter" />
            <helpers:BoolToNavCommandConverter x:Key="BoolToNavCommandConverter" />
            
        </ResourceDictionary>
    </Application.Resources>
    
</Application>
