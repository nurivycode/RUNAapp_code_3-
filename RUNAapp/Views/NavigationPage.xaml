<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:RUNAapp.ViewModels"
             xmlns:services="clr-namespace:RUNAapp.Services"
             xmlns:mapsui="clr-namespace:Mapsui.UI.Maui;assembly=Mapsui.UI.Maui"
             x:Class="RUNAapp.Views.NavigationPage"
             x:DataType="viewmodels:NavigationViewModel"
             BackgroundColor="{StaticResource RunaBackground}"
             Title="Navigation">

    <Grid RowDefinitions="Auto, *, Auto">
        
        <!-- Search Header -->
        <Frame Grid.Row="0"
               BackgroundColor="{StaticResource RunaPrimary}"
               CornerRadius="0"
               Padding="24,16"
               HasShadow="True">
            <VerticalStackLayout Spacing="12">
                
                <!-- Back and Title -->
                <Grid ColumnDefinitions="Auto, *, Auto">
                    <Button Text="â†"
                            FontSize="24"
                            BackgroundColor="Transparent"
                            TextColor="{StaticResource RunaWhite}"
                            Command="{Binding GoBackCommand}"
                            WidthRequest="48"
                            HeightRequest="48"/>
                    
                    <Label Grid.Column="1"
                           Text="Navigation"
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="{StaticResource RunaWhite}"
                           VerticalOptions="Center"
                           HorizontalOptions="Center"/>
                </Grid>
                
                <!-- Search Bar -->
                <Frame BackgroundColor="{StaticResource RunaWhite}"
                        CornerRadius="12"
                        Padding="0"
                       HasShadow="False">
                    <Grid ColumnDefinitions="*, Auto">
                        <Entry Grid.Column="0"
                               Text="{Binding SearchQuery}"
                               Placeholder="Where do you want to go?"
                               ReturnCommand="{Binding SearchLocationCommand}"
                               ReturnType="Search"
                               FontSize="16"
                               HeightRequest="48"
                               Margin="16,0"
                               TextColor="{StaticResource RunaPrimary}"
                               BackgroundColor="{StaticResource RunaWhite}"
                               PlaceholderColor="{StaticResource Gray400}"
                               SemanticProperties.Description="Destination search field"/>
                        
                        <Button Grid.Column="1"
                                Text="ðŸ”"
                                FontSize="20"
                                BackgroundColor="Transparent"
                                Command="{Binding SearchLocationCommand}"
                                WidthRequest="48"
                                HeightRequest="48"/>
                    </Grid>
                </Frame>
            </VerticalStackLayout>
        </Frame>

        <!-- Main Content -->
        <Grid Grid.Row="1"
              RowDefinitions="Auto,Auto,*,Auto"
              Padding="24,16,24,0">

            <!-- Row 0: Map -->
            <Frame Grid.Row="0"
                   Style="{StaticResource CardFrame}"
                   Padding="0">
                <mapsui:MapControl x:Name="NavigationMap"
                                   HeightRequest="260"
                                   HorizontalOptions="Fill"
                                   VerticalOptions="Fill"
                                   SemanticProperties.Description="Navigation map preview"/>
            </Frame>

            <!-- Row 1: Loading + Error -->
            <VerticalStackLayout Grid.Row="1" Spacing="8" Margin="0,16,0,0">
                <ActivityIndicator IsRunning="{Binding IsBusy}"
                                   IsVisible="{Binding IsBusy}"
                                   Color="{StaticResource RunaSecondary}"
                                   HeightRequest="40"/>

                <Frame IsVisible="{Binding HasError}"
                       BackgroundColor="{StaticResource RunaDanger}"
                       CornerRadius="8"
                       Padding="16"
                       HasShadow="False">
                    <Label Text="{Binding ErrorMessage}"
                           TextColor="{StaticResource RunaWhite}"
                           FontSize="14"/>
                </Frame>
            </VerticalStackLayout>

            <!-- Row 2: Search Results (CollectionView handles its own scrolling â€” no ScrollView wrapper) -->
            <CollectionView Grid.Row="2"
                            ItemsSource="{Binding SearchResults}"
                            SelectionMode="None"
                            Margin="0,8,0,0">
                <CollectionView.Header>
                    <Label Text="Search Results"
                           Style="{StaticResource TitleSmall}"
                           Margin="0,0,0,8"
                           IsVisible="{Binding SearchResults.Count, Converter={StaticResource IntToBoolConverter}}"/>
                </CollectionView.Header>
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="services:GeocodingResult">
                        <Frame Style="{StaticResource CardFrame}" Margin="0,4" Padding="16">
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:NavigationViewModel}}, Path=SelectDestinationCommand}"
                                    CommandParameter="{Binding .}"/>
                            </Frame.GestureRecognizers>
                            <VerticalStackLayout>
                                <Label Text="{Binding DisplayName}"
                                       FontSize="16"
                                       FontAttributes="Bold"
                                       TextColor="{StaticResource RunaTextPrimary}"
                                       LineBreakMode="TailTruncation"
                                       MaxLines="2"/>
                                <Label Text="{Binding Type}"
                                       FontSize="12"
                                       TextColor="{StaticResource RunaTextSecondary}"/>
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Row 3: Route Information / Empty State -->
            <VerticalStackLayout Grid.Row="3" Spacing="16" Margin="0,8,0,0">
                <!-- Route Information -->
                <Frame IsVisible="{Binding CurrentRoute, Converter={StaticResource ObjectToBoolConverter}}"
                       Style="{StaticResource CardFrame}">
                    <VerticalStackLayout Spacing="12">
                        <Label Text="Route Details"
                               Style="{StaticResource TitleSmall}"/>

                        <Grid ColumnDefinitions="*, *" RowSpacing="8">
                            <VerticalStackLayout>
                                <Label Text="Distance"
                                       FontSize="12"
                                       TextColor="{StaticResource RunaTextSecondary}"/>
                                <Label Text="{Binding DistanceRemaining}"
                                       FontSize="20"
                                       FontAttributes="Bold"
                                       TextColor="{StaticResource RunaSecondary}"/>
                            </VerticalStackLayout>

                            <VerticalStackLayout Grid.Column="1">
                                <Label Text="Estimated Time"
                                       FontSize="12"
                                       TextColor="{StaticResource RunaTextSecondary}"/>
                                <Label Text="{Binding TimeRemaining}"
                                       FontSize="20"
                                       FontAttributes="Bold"
                                       TextColor="{StaticResource RunaSecondary}"/>
                            </VerticalStackLayout>
                        </Grid>

                        <BoxView HeightRequest="1" Color="{StaticResource Gray600}"/>

                        <!-- Current Instruction -->
                        <Frame BackgroundColor="{StaticResource RunaSecondary}"
                               CornerRadius="8"
                               Padding="12"
                               HasShadow="False"
                               IsVisible="{Binding CurrentInstruction, Converter={StaticResource StringNotEmptyConverter}}">
                            <Label Text="{Binding CurrentInstruction}"
                                   FontSize="16"
                                   FontAttributes="Bold"
                                   TextColor="{StaticResource RunaPrimary}"
                                   HorizontalTextAlignment="Center"/>
                        </Frame>
                    </VerticalStackLayout>
                </Frame>

                <!-- Empty State -->
                <VerticalStackLayout IsVisible="{Binding CurrentRoute, Converter={StaticResource ObjectToInverseBoolConverter}}"
                                     VerticalOptions="Center"
                                     Spacing="16"
                                     Margin="0,40">
                    <Label Text="Navigation"
                           FontSize="24"
                           FontAttributes="Bold"
                           TextColor="{StaticResource RunaTextPrimary}"
                           HorizontalOptions="Center"/>
                    <Label Text="Say 'Take me to' followed by your destination."
                           Style="{StaticResource BodyMedium}"
                           HorizontalTextAlignment="Center"/>
                </VerticalStackLayout>
            </VerticalStackLayout>
        </Grid>

        <!-- Bottom Actions -->
        <Frame Grid.Row="2"
               BackgroundColor="{StaticResource RunaSurface}"
               CornerRadius="0"
               Padding="24,16"
               HasShadow="True"
               IsVisible="{Binding CurrentRoute, Converter={StaticResource ObjectToBoolConverter}}">
            <Grid ColumnDefinitions="*, *" ColumnSpacing="16">
                
                <Button Grid.Column="0"
                        Text="Start"
                        Command="{Binding StartNavigationCommand}"
                        Style="{StaticResource PrimaryButton}"
                        IsVisible="{Binding IsNotNavigating}"
                        SemanticProperties.Description="Start navigation"/>
                
                <Button Grid.Column="0"
                        Text="Stop"
                        Command="{Binding StopNavigationCommand}"
                        Style="{StaticResource PrimaryButton}"
                        IsVisible="{Binding IsNavigating}"
                        SemanticProperties.Description="Stop navigation"/>
                
                <Button Grid.Column="1"
                        Text="Repeat"
                        Command="{Binding GetCurrentStepCommand}"
                        Style="{StaticResource SecondaryButton}"
                        IsVisible="{Binding IsNavigating}"
                        SemanticProperties.Description="Repeat current instruction"/>
            </Grid>
        </Frame>
        
    </Grid>

</ContentPage>
