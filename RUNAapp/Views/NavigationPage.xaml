<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:RUNAapp.ViewModels"
             xmlns:services="clr-namespace:RUNAapp.Services"
             x:Class="RUNAapp.Views.NavigationPage"
             x:DataType="viewmodels:NavigationViewModel"
             BackgroundColor="{StaticResource RunaBackground}"
             Title="Navigation">

    <Grid RowDefinitions="Auto, *, Auto">
        
        <!-- Search Header -->
        <Frame Grid.Row="0"
               BackgroundColor="{StaticResource RunaPrimary}"
               CornerRadius="0"
               Padding="24,16"
               HasShadow="True">
            <VerticalStackLayout Spacing="12">
                
                <!-- Back and Title -->
                <Grid ColumnDefinitions="Auto, *, Auto">
                    <Button Text="â†"
                            FontSize="24"
                            BackgroundColor="Transparent"
                            TextColor="{StaticResource RunaWhite}"
                            Command="{Binding GoBackCommand}"
                            WidthRequest="48"
                            HeightRequest="48"/>
                    
                    <Label Grid.Column="1"
                           Text="Navigation"
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="{StaticResource RunaWhite}"
                           VerticalOptions="Center"
                           HorizontalOptions="Center"/>
                </Grid>
                
                <!-- Search Bar -->
                <Frame BackgroundColor="{StaticResource RunaWhite}"
                       CornerRadius="12"
                       Padding="0"
                       HasShadow="False">
                    <Grid ColumnDefinitions="*, Auto">
                        <Entry Grid.Column="0"
                               Text="{Binding SearchQuery}"
                               Placeholder="Where do you want to go?"
                               ReturnCommand="{Binding SearchLocationCommand}"
                               ReturnType="Search"
                               FontSize="16"
                               HeightRequest="48"
                               Margin="16,0"
                               SemanticProperties.Description="Destination search field"/>
                        
                        <Button Grid.Column="1"
                                Text="ðŸ”"
                                FontSize="20"
                                BackgroundColor="Transparent"
                                Command="{Binding SearchLocationCommand}"
                                WidthRequest="48"
                                HeightRequest="48"/>
                    </Grid>
                </Frame>
            </VerticalStackLayout>
        </Frame>

        <!-- Main Content -->
        <ScrollView Grid.Row="1" Padding="24">
            <VerticalStackLayout Spacing="16">
                
                <!-- Loading Indicator -->
                <ActivityIndicator IsRunning="{Binding IsBusy}"
                                   IsVisible="{Binding IsBusy}"
                                   Color="{StaticResource RunaSecondary}"
                                   HeightRequest="40"/>

                <!-- Error Message -->
                <Frame IsVisible="{Binding HasError}"
                       BackgroundColor="{StaticResource RunaDanger}"
                       CornerRadius="8"
                       Padding="16"
                       HasShadow="False">
                    <Label Text="{Binding ErrorMessage}"
                           TextColor="{StaticResource RunaWhite}"
                           FontSize="14"/>
                </Frame>

                <!-- Search Results -->
                <VerticalStackLayout Spacing="8"
                                     IsVisible="{Binding SearchResults.Count, Converter={StaticResource IntToBoolConverter}}">
                    <Label Text="Search Results"
                           Style="{StaticResource TitleSmall}"/>
                    
                    <CollectionView ItemsSource="{Binding SearchResults}"
                                    SelectionMode="Single"
                                    SelectionChangedCommand="{Binding SelectDestinationCommand}"
                                    SelectionChangedCommandParameter="{Binding ., Source={RelativeSource Self}}">
                        <CollectionView.ItemTemplate>
                            <DataTemplate x:DataType="services:GeocodingResult">
                                <Frame Style="{StaticResource CardFrame}" Margin="0,4" Padding="16">
                                    <VerticalStackLayout>
                                        <Label Text="{Binding DisplayName}"
                                               FontSize="16"
                                               FontAttributes="Bold"
                                               TextColor="{StaticResource RunaTextPrimary}"
                                               LineBreakMode="TailTruncation"
                                               MaxLines="2"/>
                                        <Label Text="{Binding Type}"
                                               FontSize="12"
                                               TextColor="{StaticResource RunaTextSecondary}"/>
                                    </VerticalStackLayout>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>

                <!-- Route Information -->
                <Frame IsVisible="{Binding CurrentRoute, Converter={StaticResource ObjectToBoolConverter}}"
                       Style="{StaticResource CardFrame}">
                    <VerticalStackLayout Spacing="12">
                        <Label Text="Route Details"
                               Style="{StaticResource TitleSmall}"/>
                        
                        <Grid ColumnDefinitions="*, *" RowSpacing="8">
                            <VerticalStackLayout>
                                <Label Text="Distance"
                                       FontSize="12"
                                       TextColor="{StaticResource RunaTextSecondary}"/>
                                <Label Text="{Binding DistanceRemaining}"
                                       FontSize="20"
                                       FontAttributes="Bold"
                                       TextColor="{StaticResource RunaPrimary}"/>
                            </VerticalStackLayout>
                            
                            <VerticalStackLayout Grid.Column="1">
                                <Label Text="Estimated Time"
                                       FontSize="12"
                                       TextColor="{StaticResource RunaTextSecondary}"/>
                                <Label Text="{Binding TimeRemaining}"
                                       FontSize="20"
                                       FontAttributes="Bold"
                                       TextColor="{StaticResource RunaPrimary}"/>
                            </VerticalStackLayout>
                        </Grid>
                        
                        <BoxView HeightRequest="1" Color="{StaticResource Gray200}"/>
                        
                        <!-- Current Instruction -->
                        <Frame BackgroundColor="{StaticResource RunaSecondary}"
                               CornerRadius="8"
                               Padding="12"
                               HasShadow="False"
                               IsVisible="{Binding CurrentInstruction, Converter={StaticResource StringNotEmptyConverter}}">
                            <Label Text="{Binding CurrentInstruction}"
                                   FontSize="16"
                                   FontAttributes="Bold"
                                   TextColor="{StaticResource RunaPrimary}"
                                   HorizontalTextAlignment="Center"/>
                        </Frame>
                    </VerticalStackLayout>
                </Frame>

                <!-- Empty State -->
                <VerticalStackLayout IsVisible="{Binding CurrentRoute, Converter={StaticResource ObjectToInverseBoolConverter}}"
                                     VerticalOptions="Center"
                                     Spacing="16"
                                     Margin="0,40">
                    <Label Text="Navigation"
                           FontSize="24"
                           FontAttributes="Bold"
                           TextColor="{StaticResource RunaTextPrimary}"
                           HorizontalOptions="Center"/>
                    <Label Text="Enter a destination above or say 'Take me to' followed by your destination."
                           Style="{StaticResource BodyMedium}"
                           HorizontalTextAlignment="Center"/>
                </VerticalStackLayout>
            </VerticalStackLayout>
        </ScrollView>

        <!-- Bottom Actions -->
        <Frame Grid.Row="2"
               BackgroundColor="{StaticResource RunaSurface}"
               CornerRadius="0"
               Padding="24,16"
               HasShadow="True"
               IsVisible="{Binding CurrentRoute, Converter={StaticResource ObjectToBoolConverter}}">
            <Grid ColumnDefinitions="*, *" ColumnSpacing="16">
                
                <Button Grid.Column="0"
                        Text="{Binding IsNavigating, Converter={StaticResource BoolToNavButtonTextConverter}}"
                        Command="{Binding IsNavigating, Converter={StaticResource BoolToNavCommandConverter}}"
                        Style="{StaticResource PrimaryButton}"
                        SemanticProperties.Description="Start or stop navigation"/>
                
                <Button Grid.Column="1"
                        Text="Repeat"
                        Command="{Binding GetCurrentStepCommand}"
                        Style="{StaticResource SecondaryButton}"
                        IsVisible="{Binding IsNavigating}"
                        SemanticProperties.Description="Repeat current instruction"/>
            </Grid>
        </Frame>
        
    </Grid>

</ContentPage>
