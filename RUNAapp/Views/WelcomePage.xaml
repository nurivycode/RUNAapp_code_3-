<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:RUNAapp.ViewModels"
             x:Class="RUNAapp.Views.WelcomePage"
             x:DataType="viewmodels:WelcomeViewModel"
             BackgroundColor="{StaticResource RunaPrimary}"
             Shell.NavBarIsVisible="False">

    <Grid RowDefinitions="3*, 2*, Auto" Padding="32">

        <!-- Logo Area -->
        <VerticalStackLayout Grid.Row="0"
                             VerticalOptions="Center"
                             HorizontalOptions="Center"
                             Spacing="16">

            <!-- App Name -->
            <Label Text="RUNA"
                   FontSize="64"
                   FontAttributes="Bold"
                   TextColor="{StaticResource RunaWhite}"
                   HorizontalOptions="Center"
                   SemanticProperties.HeadingLevel="Level1"
                   SemanticProperties.Description="RUNA Application Logo"/>

            <!-- Tagline -->
            <Label Text="Safe navigation for your everyday life"
                   FontSize="18"
                   TextColor="{StaticResource RunaWhite}"
                   HorizontalOptions="Center"
                   HorizontalTextAlignment="Center"
                   Opacity="0.9"/>
        </VerticalStackLayout>

        <!-- Action Buttons -->
        <VerticalStackLayout Grid.Row="1"
                             VerticalOptions="Center"
                             Spacing="16">

            <!-- Sign Up Button (Primary) -->
            <Button Text="SIGN UP"
                    Command="{Binding GoToRegisterCommand}"
                    BackgroundColor="{StaticResource RunaSecondary}"
                    TextColor="{StaticResource RunaPrimary}"
                    FontSize="18"
                    FontAttributes="Bold"
                    HeightRequest="60"
                    CornerRadius="8"
                    SemanticProperties.Hint="Tap to create a new account"/>

            <!-- Log In Button (Outline) -->
            <Button Text="LOG IN"
                    Command="{Binding GoToLoginCommand}"
                    BackgroundColor="Transparent"
                    TextColor="{StaticResource RunaSecondary}"
                    BorderColor="{StaticResource RunaSecondary}"
                    BorderWidth="2"
                    FontSize="18"
                    FontAttributes="Bold"
                    HeightRequest="60"
                    CornerRadius="8"
                    SemanticProperties.Hint="Tap to sign in to your account"/>
        </VerticalStackLayout>

        <!-- Help Hint -->
        <Label Grid.Row="2"
               Text="Long-press any button for help"
               FontSize="14"
               TextColor="{StaticResource RunaWhite}"
               HorizontalOptions="Center"
               Opacity="0.6"
               Margin="0,0,0,24"/>

    </Grid>

</ContentPage>
