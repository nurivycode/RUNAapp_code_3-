<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- ═══════════════════════════════════════════════════════════════════════
         RUNA Brand Colors
         ═══════════════════════════════════════════════════════════════════════ -->
    
    <!-- Primary: Dark Blue - Main brand color, used for headers, primary buttons -->
    <Color x:Key="RunaPrimary">#051F45</Color>
    <Color x:Key="RunaPrimaryLight">#0A3A7A</Color>
    <Color x:Key="RunaPrimaryDark">#021029</Color>
    
    <!-- Secondary: Yellow/Orange - Accent, warnings, highlights -->
    <Color x:Key="RunaSecondary">#F2AA3E</Color>
    <Color x:Key="RunaSecondaryLight">#F5C06A</Color>
    <Color x:Key="RunaSecondaryDark">#D4912A</Color>
    
    <!-- Accent: Green - Success states, minimal use -->
    <Color x:Key="RunaAccent">#057758</Color>
    <Color x:Key="RunaAccentLight">#0A9E76</Color>
    <Color x:Key="RunaAccentDark">#035540</Color>
    
    <!-- Neutrals -->
    <Color x:Key="RunaWhite">#FFFFFF</Color>
    <Color x:Key="RunaBlack">#000000</Color>
    <Color x:Key="RunaBackground">#051F45</Color>
    <Color x:Key="RunaSurface">#051F45</Color>
    
    <!-- Text Colors -->
    <Color x:Key="RunaTextPrimary">#051F45</Color>
    <Color x:Key="RunaTextSecondary">#5A6B7D</Color>
    <Color x:Key="RunaTextOnPrimary">#FFFFFF</Color>
    <Color x:Key="RunaTextOnSecondary">#051F45</Color>
    
    <!-- Alert Colors -->
    <Color x:Key="RunaDanger">#DC3545</Color>
    <Color x:Key="RunaWarning">#F2AA3E</Color>
    <Color x:Key="RunaSuccess">#057758</Color>
    <Color x:Key="RunaInfo">#17A2B8</Color>
    
    <!-- Grayscale -->
    <Color x:Key="Gray50">#F9FAFB</Color>
    <Color x:Key="Gray100">#F3F4F6</Color>
    <Color x:Key="Gray200">#E5E7EB</Color>
    <Color x:Key="Gray300">#D1D5DB</Color>
    <Color x:Key="Gray400">#9CA3AF</Color>
    <Color x:Key="Gray500">#6B7280</Color>
    <Color x:Key="Gray600">#4B5563</Color>
    <Color x:Key="Gray700">#374151</Color>
    <Color x:Key="Gray800">#1F2937</Color>
    <Color x:Key="Gray900">#111827</Color>

    <!-- ═══════════════════════════════════════════════════════════════════════
         Brushes
         ═══════════════════════════════════════════════════════════════════════ -->
    
    <SolidColorBrush x:Key="RunaPrimaryBrush" Color="{StaticResource RunaPrimary}"/>
    <SolidColorBrush x:Key="RunaSecondaryBrush" Color="{StaticResource RunaSecondary}"/>
    <SolidColorBrush x:Key="RunaAccentBrush" Color="{StaticResource RunaAccent}"/>
    <SolidColorBrush x:Key="RunaBackgroundBrush" Color="{StaticResource RunaBackground}"/>
    <SolidColorBrush x:Key="RunaSurfaceBrush" Color="{StaticResource RunaSurface}"/>
    
    <!-- Gradient Brushes -->
    <LinearGradientBrush x:Key="RunaPrimaryGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="{StaticResource RunaPrimary}" Offset="0.0"/>
        <GradientStop Color="{StaticResource RunaPrimaryLight}" Offset="1.0"/>
    </LinearGradientBrush>
    
    <LinearGradientBrush x:Key="RunaSecondaryGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="{StaticResource RunaSecondary}" Offset="0.0"/>
        <GradientStop Color="{StaticResource RunaSecondaryLight}" Offset="1.0"/>
    </LinearGradientBrush>

</ResourceDictionary>
